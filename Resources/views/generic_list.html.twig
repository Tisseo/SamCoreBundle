{% extends ['base.html.twig', 'CanalTPSamCoreBundle::base.html.twig'] %}

{% import "CanalTPSamCoreBundle::macros.html.twig" as macros %}

{% if table_id is not defined %}
    {% set table_id = 'table' %}
{% endif %}

{% block main_content -%}
    <h1>{% block list_title -%}{% endblock %}</h1>
    {% block list_menu -%}{% endblock %}
    <hr/>
    <table class="table table-striped table-bordered table-hover" id="{{ table_id }}">
        <thead>
            <tr>
               {% block table_head -%}{% endblock %}
            </tr>
        </thead>
        <tbody>
        {% block table_body -%}
        {% endblock %}
        </tbody>
    </table>

    {% block list_pagination -%}
    {% endblock %}

{% endblock %}
